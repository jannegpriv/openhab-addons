	<channel-group-type id="odometer">
		<label>Trip Meters</label>
		<channels>
			<channel id="last-update" typeId="timestamp">
				<label>Odometer Last Update</label>
			</channel>
			<channel id="odometer-km" typeId="odometer"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="fuel">
		<label>Fuel Information</label>
		<channels>
			<channel id="last-update" typeId="timestamp">
				<label>Fuel Information Last Update</label>
			</channel>
			<channel id="level" typeId="fuel-level"/>
