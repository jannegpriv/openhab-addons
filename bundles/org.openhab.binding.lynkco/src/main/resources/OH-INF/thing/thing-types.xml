		<label>Engine Oil Level</label>
		<description>Engine oil level status</description>
		<category>Status</category>
		<state readOnly="true">
			<options>
				<option value="ENGINE_OIL_LEVEL_STATUS_NORMAL">Normal</option>
				<option value="ENGINE_OIL_LEVEL_STATUS_LOW">Low</option>
			</options>
		</state>
