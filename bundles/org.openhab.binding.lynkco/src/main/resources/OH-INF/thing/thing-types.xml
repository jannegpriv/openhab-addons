				<label>Vehicle Last Update</label>
			</channel>
			<channel id="engine-status" typeId="engine-status"/>
			<channel id="key-status" typeId="key-status"/>
			<channel id="usage-mode" typeId="usage-mode"/>
		</channels>
	</channel-group-type>

