			</channel>
			<channel id="voltage" typeId="voltage"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="charging">
		<label>Charging Status</label>
		<channels>
			<channel id="last-update" typeId="timestamp">
				<label>Charging Last Update</label>
			</channel>
			<channel id="charging-level" typeId="battery-level"/>
