	</channel-group-type>

	<channel-group-type id="position">
		<label>Location Information</label>
		<channels>
			<channel id="location" typeId="location"/>
			<channel id="location-trusted" typeId="trust-level"/>
			<channel id="updated-at" typeId="timestamp">
				<label>Position Last Update</label>
			</channel>
		</channels>
	</channel-group-type>

	<channel-group-type id="battery">
		<label>Battery Status</label>
		<channels>
			<channel id="last-update" typeId="timestamp">
				<label>Battery Last Update</label>
			</channel>
			<channel id="charge" typeId="charge-status"/>
			<channel id="charge-level" typeId="battery-level">
