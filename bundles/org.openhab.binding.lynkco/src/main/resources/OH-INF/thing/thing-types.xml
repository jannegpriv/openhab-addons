		<channels>
			<channel id="preclimate" typeId="preclimate-control"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="engine-control">
		<label>Engine Control</label>
		<description>Control vehicle engine</description>
		<channels>
			<channel id="start" typeId="engine-control"/>
		</channels>
	</channel-group-type>

