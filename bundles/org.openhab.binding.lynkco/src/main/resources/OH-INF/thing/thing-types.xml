			</channel>
			<channel id="energy-level" typeId="battery-level">
				<label>Energy Level</label>
			</channel>
			<channel id="health" typeId="battery-level">
				<label>Battery Health</label>
			</channel>
			<channel id="power-level" typeId="battery-level">
