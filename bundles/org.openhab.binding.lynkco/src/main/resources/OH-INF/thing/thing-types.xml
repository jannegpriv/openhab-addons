		<label>Engine Oil Pressure</label>
		<description>Engine oil pressure status</description>
		<category>Status</category>
		<state readOnly="true">
			<options>
				<option value="ENGINE_OIL_PRESSURE_STATUS_NORMAL">Normal</option>
				<option value="ENGINE_OIL_PRESSURE_STATUS_LOW">Low</option>
			</options>
		</state>
