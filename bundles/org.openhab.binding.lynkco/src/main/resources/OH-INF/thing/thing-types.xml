			<channel id="coolant" typeId="coolant-level"/>
			<channel id="engine-oil-level" typeId="engine-oil-level"/>
			<channel id="engine-oil-pressure" typeId="engine-oil-pressure"/>
			<channel id="service-warning" typeId="service-warning"/>
