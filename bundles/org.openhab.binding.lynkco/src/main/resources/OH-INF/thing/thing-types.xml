<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="lynkco"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="api">
		<label>@text/thing-type.lynkco.api.label</label>
		<description>@text/thing-type.lynkco.api.description</description>

		<properties>
			<property name="vendor">LynkCo</property>
		</properties>

		<config-description>
			<parameter name="email" type="text" required="true">
				<label>@text/thing-type.config.lynkco.api.email.label</label>
				<description>@text/thing-type.config.lynkco.api.email.description</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<label>@text/thing-type.config.lynkco.api.password.label</label>
				<context>password</context>
				<description>@text/thing-type.config.lynkco.api.password.description</description>
			</parameter>
			<parameter name="mfa" type="text" required="false">
				<label>@text/thing-type.config.lynkco.api.mfa.label</label>
				<description>@text/thing-type.config.lynkco.api.mfa.description</description>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="vehicle">
		<supported-bridge-type-refs>
			<bridge-type-ref id="api"/>
		</supported-bridge-type-refs>

		<label>@text/thing-type.lynkco.vehicle.label</label>
		<description>@text/thing-type.lynkco.vehicle.description</description>

		<channel-groups>
			<channel-group id="doors" typeId="doors"/>
			<channel-group id="windows" typeId="windows"/>
			<channel-group id="odometer" typeId="odometer"/>
			<channel-group id="fuel" typeId="fuel"/>
			<channel-group id="position" typeId="position"/>
			<channel-group id="battery" typeId="battery"/>
			<channel-group id="charging" typeId="charging"/>
			<channel-group id="climate" typeId="climate"/>
			<channel-group id="maintenance" typeId="maintenance"/>
			<channel-group id="bulbs" typeId="bulbs"/>
			<channel-group id="safety" typeId="safety"/>
			<channel-group id="tyres" typeId="tyres"/>
			<channel-group id="climate-control" typeId="climate-control"/>
			<channel-group id="engine-control" typeId="engine-control"/>
			<channel-group id="doors-control" typeId="doors-control"/>
			<channel-group id="lights-control" typeId="lights-control"/>
			<channel-group id="horn-control" typeId="horn-control"/>
			<channel-group id="trip" typeId="trip"/>
			<channel-group id="vehicle-status" typeId="vehicle-status"/>
		</channel-groups>

		<properties>
			<property name="vendor">LynkCo</property>
			<property name="thingTypeVersion">1</property>
		</properties>

		<representation-property>vin</representation-property>

		<config-description>
			<parameter name="vin" type="text" required="true">
				<label>@text/thing-type.config.lynkco.vehicle.vin.label</label>
				<description>@text/thing-type.config.lynkco.vehicle.vin.description</description>
			</parameter>
			<parameter name="refresh" type="integer" min="5" max="65535" unit="min">
				<label>thing-type.config.lynkco.api.refresh.label</label>
				<description>thing-type.config.lynkco.api.refresh.description</description>
				<default>5</default>
			</parameter>
		</config-description>
	</thing-type>

	<channel-group-type id="doors">
