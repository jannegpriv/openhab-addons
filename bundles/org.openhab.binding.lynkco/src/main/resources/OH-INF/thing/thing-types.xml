		<description>Control vehicle lights</description>
		<channels>
			<channel id="flash" typeId="lights-flash-control"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="horn-control">
		<label>Horn Control</label>
		<description>Control vehicle horn and alerts</description>
		<channels>
			<channel id="honk" typeId="horn-control"/>
			<channel id="honkflash" typeId="honk-flash-control"/>
		</channels>
	</channel-group-type>

	<channel-type id="switch">
		<item-type>Switch</item-type>
		<label>Switch</label>
		<description>A switch that can be toggled</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="odometer">
		<item-type>Number:Length</item-type>
		<label>Odometer</label>
		<state pattern="%.1f %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="distance">
		<item-type>Number:Length</item-type>
		<label>Distance</label>
		<state pattern="%.1f %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="battery-level">
		<item-type>Number:Dimensionless</item-type>
		<label>Battery Level</label>
		<category>Battery</category>
		<state pattern="%.1f %%" readOnly="true"/>
	</channel-type>

	<channel-type id="voltage">
		<item-type>Number:ElectricPotential</item-type>
		<label>Battery Voltage</label>
		<category>Battery</category>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="temperature">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<category>Temperature</category>
		<state pattern="%.1f %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="location">
		<item-type>Location</item-type>
		<label>Location</label>
		<category>Location</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="fuel-consumption">
		<item-type>Number</item-type>
		<label>Fuel Consumption</label>
		<description>Average fuel consumption in l/100km</description>
		<category>Energy</category>
		<state pattern="%.1f l/100km" readOnly="true"/>
	</channel-type>

	<channel-type id="fuel-level">
		<item-type>Number:Volume</item-type>
		<label>Fuel Level</label>
		<category>Energy</category>
		<state pattern="%.1f %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="fuel-level-status">
		<item-type>Number</item-type>
		<label>Fuel Level Status</label>
		<category>Energy</category>
		<state pattern="%.1f %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="fuel-type">
		<item-type>String</item-type>
		<label>Fuel Type</label>
		<category>Energy</category>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="charger-connection-status">
		<item-type>String</item-type>
		<label>Charger Connection Status</label>
		<description>Status of charger connection</description>
		<category>Energy</category>
		<state readOnly="true">
			<options>
				<option value="CHARGER_CONNECTION_UNSPECIFIED">Unspecified</option>
				<option value="CHARGER_CONNECTION_DISCONNECTED">Disconnected</option>
				<option value="CHARGER_CONNECTION_CONNECTED_WITHOUT_POWER">Connected (No Power)</option>
				<option value="CHARGER_CONNECTION_POWER_AVAILABLE_BUT_NOT_ACTIVATED">Power Not Activated</option>
				<option value="CHARGER_CONNECTION_CONNECTED_WITH_POWER">Connected</option>
				<option value="CHARGER_CONNECTION_INIT">Initializing</option>
				<option value="CHARGER_CONNECTION_FAULT">Fault</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="charger-state">
		<item-type>String</item-type>
		<label>Charging State</label>
		<description>Current charging state</description>
		<category>Energy</category>
		<state readOnly="true">
			<options>
				<option value="CHARGER_STATE_UNSPECIFIED">Unspecified</option>
				<option value="CHARGER_STATE_IDLE">Idle</option>
				<option value="CHARGER_STATE_PRE_STRT">Pre-Start</option>
				<option value="CHARGER_STATE_CHARGN">Charging</option>
				<option value="CHARGER_STATE_ALRM">Alarm</option>
				<option value="CHARGER_STATE_SRV">Service</option>
				<option value="CHARGER_STATE_DIAG">Diagnostics</option>
				<option value="CHARGER_STATE_BOOT">Boot</option>
				<option value="CHARGER_STATE_RSTRT">Restart</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="charging-time">
		<item-type>Number:Time</item-type>
		<label>Time to Full Charge</label>
		<category>Time</category>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="trust-level">
		<item-type>Switch</item-type>
		<label>Location Trust Level</label>
		<state readOnly="true"/>
